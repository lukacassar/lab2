#include <stdio.h>
#include <string.h>

int main() {
    char word1[40], word2[40], word3[40];

    printf("Enter the first word: ");
    scanf("%s", word1);

    printf("Enter the second word: ");
    scanf("%s", word2);

    printf("Enter the third word: ");
    scanf("%s", word3);

    for (int i = strlen(word1)-1; i>=0; i--) {
        printf("%c", word1[i]);
    }

    printf("\n");

    for (int i = strlen(word2)-1; i>=0; i--) {
        printf("%c", word2[i]);
    }
    printf("\n");

    for (int i = strlen(word3)-1; i>=0; i--) {
        printf("%c", word3[i]);
    }

    return 0;
}
