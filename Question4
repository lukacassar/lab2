#include <stdio.h>
#include <string.h>

int main() {

    char name[5][40], surname[5][40];
    int age[5];
    double salary[5];
    for(int i = 0; i < 5; i++) {
        printf("Person %d\n", i + 1);

        printf("What is your name\n");
        scanf("%10s", name[i]);

        printf("What is your surname\n");
        scanf("%10s", surname[i]);

        printf("How old are you?\n");
        scanf("%d", &age[i]);

        printf("What is your monthly salary?\n");
        scanf("%lf", &salary[i]);
    }

    printf("%s, %20s, %20s, %20s\n", "name", "surname", "age", "salary");
    for(int i = 0; i < 5; i++) {
        printf("%s %20s %20d %20lf\n", name[i], surname[i], age[i], salary[i]);
    }

    return 0;
}
